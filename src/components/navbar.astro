---
import i2iLogo from "../assets/ideas2it_logo.jpg"
import img1 from "../assets/ai-platform.svg";
import img2 from "../assets/ai-svgrepo.svg";
import img3 from "../assets/ai-svgrepo-1.svg";
import img4 from "../assets/chat-left.svg";
import infoImg from "../assets/information.svg";
const {route} = Astro.props;

function getClass(routeName){
	return "list "+(route==routeName?"active-link":"")
}
---

<div id="navbar">
	<div class="top">
		<img src={i2iLogo.src} >
	</div>
	<div class="center">
		<a class={getClass("index")} href="/">
			<img src={img1.src} />
			<p>Summary</p>
		</a>
		<a class={getClass("chat")} href="/chat">
			<img src={img3.src} />
			<p>Chat</p>
		</a>
		<a class={getClass("about")} href="/about">
			<img src={infoImg.src} />
			<p>About</p>
		</a>
	</div>
	<div class="bottom"></div>
</div>

<style>
	#navbar {
		width: 80px;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-self: start;
		color: white;

		& > * {
			width: 100%;
			height: 100%;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			gap: 10px;
		}

		& > .bottom {
			height: 100px;
		}

		&>.top{
			margin-top: 20px;
			height: fit-content;
			padding: 10px;
			display: flex;
			justify-content: center;
			align-items: center;
			flex-direction: column;
			
			&>img{
				user-select: none;
				--dimension:50px;
				width: var(--dimension);
				height: var(--dimension);
				min-width: var(--dimension);
				min-height:  var(--dimension);
				border-radius: 50%;
				border:4px solid transparent;
				outline: 3px solid #4a4a4a;
			}
		}

		& > .center {
			gap:10px;
			padding: 8px;

			.list {
				cursor: pointer;
				width: 100%;
				padding: 10px 0;
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
				transition:all 0.3s;
				border-radius: 15px;
				user-select: none;
				border:1px solid transparent;
				font-size: 12px;

				&:hover{
					border:1px solid #666;
					background: #333;
				}
				
				&:active{
					scale:0.95;
				}

				&.active-link{
					background: #222;
				}

				& > img {
					--dimension:32px;
					width: var(--dimension);
					height: var(--dimension);
					min-width: var(--dimension);
					min-height:  var(--dimension);
					object-fit: cover;
					object-position: center;
				}
			}
		}
	}
</style>
